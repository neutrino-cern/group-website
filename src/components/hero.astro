---
import { Picture } from "@astrojs/image/components";
import headerImage from "/src/assets/protodune-group.jpg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={headerImage}
      alt="Chipmunk"
      widths={[200, 400, 600, 1200, 2400]}
      aspectRatio="4:3"
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"

      class="w-full rounded-xl transition hover:-translate-y-2 hover:shadow-xl"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      CERN Neutrino Group
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Cooler than Liquid Argon. Hotter than a Supernova. Room temperature IQ.
    </p>

    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://neutrino-cern.github.io/"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon name="bx:bxs-rocket" class="h-6"/>
        Group Docs
      </Link>
    </div>
  </div>
</main>
