---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Team",
    path: "/team",
  },
  {
    title: "Research",
    path: "/research",
  },
  {
    title: "Neutrinos",
    path: "/neutrinos",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---
<div class="bg-black text-slate-400">
  <div class ="max-w-screen-xl mx-auto px-5">
    <header class="text-sm h-10 flex items-center">
      <a href="https://home.cern/" target="_blank" rel="noopener noreferrer">
      <span class="font-bold text-white">CERN</span><span class="ml-1">Accelerating science</span>
      </a>
      <span class="ml-auto">
        <a href="https://directory.web.cern.ch/" target="_blank" rel="noopener noreferrer">Directory</a>
      </span>
    </header>
  </div>
</div>

<Container>
  
  <header class="flex flex-col lg:flex-row justify-between items-center my-4">
    
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">EP-NU</span><span
            class="text-slate-500"> @ CERN</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 text-gray-600 hover:text-gray-900">
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>
